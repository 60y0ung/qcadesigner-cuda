circuit_ls+="CircuitMUX42_128000.qca "
circuit_ls+="CircuitBig_64000.qca "
circuit_ls+="CircuitMIG.qca "
circuit_ls+="CircuitVERYBIG_512000.qca "
circuit_ls+="CircuitMUX83_4096000.qca "
now=$(date +%s)
echo These files will be used for simulation:
echo $circuit_ls
for i in $circuit_ls
do
	echo Simulating $i...
	touch ../data/sim_outputs/coherence/$i-$now-cuda.log
	../bin/qcadesigner-cuda -f ../data/circuits/$i -o ../scripts/coherence_options_$i.txt -n 1 -t 0.001 -e COHERENCE_VECTOR -s ../data/sim_outputs/coherence/$i-$now | tee ../data/sim_outputs/coherence/$i-$now-cuda.log
	echo Done simulating $i.
	cd ../data
	if [ -e gnuplot/circuit ]
	then
		rm gnuplot/circuit
	fi
	cp sim_outputs/coherence/$i-$now-cuda.out gnuplot/circuit
	cd gnuplot
	gnuplot script_plot.gpi
	mv -T circuit.png ../sim_outputs/coherence/$i-$now-cuda.png
	rm circuit
	cd ../sim_outputs/coherence
	
	for mail in $@
	do
		echo Emailing data to: $mail
		echo Subject: $i-$now-cuda - Simulation done.
		echo Body: $(cat $i-$now-cuda.log)
		echo Attachment: $i-$now-cuda.png
		cat $i-$now-cuda.log | mutt -s "$i-$now-cuda - Simulation done." -a $i-$now-cuda.png -- $mail
	done
	cd ../../../scripts
done
echo All done.
