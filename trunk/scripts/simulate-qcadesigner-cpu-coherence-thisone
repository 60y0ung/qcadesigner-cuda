now=$(date +%s)
echo These files will be used for testing:
echo $1
if [ ! -f ../data/circuits/$1 ]
then
	echo "Usage: $0 file.qca {email_1 ... email_n}"
	echo "file.qca must exist in ../data/circuits"
	echo "mail addresses are optional"
else	
	echo Simulating $1...
	touch ../data/sim_outputs/coherence/$1-$now-cpu.log
	../bin/qcadesigner-cpu -f ../data/circuits/$1 -o ../scripts/coherence_options_$1.txt -n 1 -t 0.001 -e COHERENCE_VECTOR -s ../data/sim_outputs/coherence/$1-$now | tee ../data/sim_outputs/coherence/$1-$now-cpu.log
	echo Done simulating $1.
	cd ../data
	if [ -e gnuplot/circuit ]
	then
		rm gnuplot/circuit
	fi
	cp sim_outputs/coherence/$1-$now-cpu.out gnuplot/circuit
	cd gnuplot
	gnuplot script_plot.gpi
	mv -T circuit.png ../sim_outputs/coherence/$1-$now-cpu.png
	rm circuit
	cd ../sim_outputs/coherence
	
	for mail in $@
	do
		if [ ! -f ../../circuits/$mail ]
		then
			echo Emailing data to: $mail
			echo Subject: $1-$now-cpu - Simulation done.
			echo Body: $(cat $1-$now-cpu.log)
			echo Attachment: $1-$now-cpu.png
			cat $1-$now-cpu.log | mutt -s "$1-$now-cpu - Simulation done." -a $1-$now-cpu.png -- $mail
		fi
	done
	cd ../../../scripts
fi
echo All done.
