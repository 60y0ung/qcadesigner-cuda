circuit_ls+="CircuitBig_64000.qca "
now=$(date +%s)
echo These files will be used for testing:
echo $circuit_ls
for i in $circuit_ls
do
	echo Simulating $i...
	touch ../data/sim_outputs/bistable/$i-$now-cpu.log
	../bin/qcadesigner-cpu -f ../data/circuits/bistable/$i -o ../scripts/bistable_options.txt -n 1 -t 0.001 -e BISTABLE -s ../data/sim_outputs/bistable/$i-$now | tee ../data/sim_outputs/bistable/$i-$now-cpu.log
	echo Done simulating $i.
	cd ../data/
	if [ -e gnuplot/circuit ]
	then
		rm gnuplot/circuit
	fi
	cp sim_outputs/bistable/$i-$now-cpu.out gnuplot/circuit
	cd gnuplot
	gnuplot script_plot.gpi
	mv -T circuit.png ../sim_outputs/bistable/$i-$now-cpu.png
	rm circuit
	cd ../sim_outpus/bistable
	
	for mail in $@
	do
		echo Emailing data to: $mail
		echo Subject: $i-$now-cpu - Simulation done.
		echo Body: $(cat $i-$now-cpu.log)
		echo Attachment: $i-$now-cpu.png
		cat $i-$now-cpu.log | mutt -s "$i-$now-cpu - Simulation done." -a $i-$now-cpu.png -- $mail
	done
	cd ../../scripts
done
echo All done.

